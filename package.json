{
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "name": "to-do-list-root",
  "version": "1.0.0",
  "scripts": {
    "setup": "npm run install:all && npm run generate-prisma",
    "install:all": "npm --prefix backend install && npm --prefix frontend install",
    "generate-prisma": "npx prisma generate --schema backend/prisma/schema.prisma",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm --prefix backend run start:dev",
    "start:frontend": "npm --prefix frontend start"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }

}
