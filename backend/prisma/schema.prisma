generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  tasks    Task[]
}

model Task {
  id             Int       @id @default(autoincrement())
  titulo         String
  descricao      String?
  status         String    @default("pendente")
  data_criacao   DateTime  @default(now())
  data_conclusao DateTime?
  userId         Int
  user           User      @relation(fields: [userId], references: [id])
}
